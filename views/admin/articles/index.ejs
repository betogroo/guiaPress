<%- include ('../../partials/header.ejs') -%>
<%- include ('../../partials/navbar.ejs') -%>

<div class="container">
    <h2>Index da articles</h2>
    <a href="/admin/articles/new" class="btn btn-success">Criar novo Artigo</a>
    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
           
             
            <% articles.forEach(article => { %>
                <tr>
                    <th><%=article.id%></th>
                    <th><%=article.title  %></th>
                    <th><%=article.slug  %></th>
                    <th><%=article.category.title %></th>
                    
                    
                    
    
                    <th>
                        <a href="/admin/article/edit/" class="btn btn-warning">Editar</a>
                        <form action="/articles/delete" method="post" style="display: inline" onsubmit="deleteConfirm(event, this)">
                            <button  class="btn btn-danger" type="submit">Excluir</button>
                            <input type="hidden" value="<%= article.id %> " name="id">
                        </form>
                    
                    </th>
                    
                </tr>
            <% }) %>
            
 
            
    
        </tbody>
    
    </table>



</div>

<%- include ('../../partials/footer.ejs') -%>
